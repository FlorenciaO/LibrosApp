<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titulo_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:text="@string/terminos_y_condiciones_titulo"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmacion_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo_text_view">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terminos_y_condiciones"
            android:textSize="24sp" />

    </ScrollView>

    <!-- Modulo 3 - clase 2 - Ejercicios -->
    <!--
    TODO(1. Agregar un checkbox que solicite la confirmación de lectura del usuario)
    TODO(2.Agregar un boton para que presione aceptar y se fije que la confirmación fue hecha)
    -->

    <LinearLayout
        android:id="@+id/confirmacion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        tools:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <CheckBox
            android:id="@+id/confirmacion_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmar_lectura_checkbox" />

        <Button
            android:id="@+id/confirmacion_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmar_lectura_boton" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
